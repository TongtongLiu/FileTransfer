<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_height"
        android:background="@color/action_bar" >

        <Button
            android:id="@+id/folders_button_back"
            android:layout_width="@dimen/action_bar_button_size"
            android:layout_height="@dimen/action_bar_button_size"
            android:layout_marginLeft="@dimen/action_bar_margin"
            android:layout_marginStart="@dimen/action_bar_margin"
            android:layout_centerVertical="true"
            android:background="@drawable/back" />

        <TextView
            android:id="@+id/folders_text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/action_bar_margin"
            android:layout_marginStart="@dimen/action_bar_margin"
            android:layout_toRightOf="@id/folders_button_back"
            android:layout_toEndOf="@id/folders_button_back"
            android:text="@string/activity_folders"
            android:textColor="@color/foreground"
            android:textSize="18sp" />

    </RelativeLayout>

    <fragment
        android:id="@+id/folders_fragment"
        android:name="com.network.filetransfer.FoldersFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/folders_button_send"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_send_height"
        android:text="@string/button_send"
        android:textColor="@color/foreground"
        android:textSize="25sp"
        android:background="@color/button_send" />

</LinearLayout>
