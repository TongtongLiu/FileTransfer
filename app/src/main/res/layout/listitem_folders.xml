<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listitem_folders"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/listview_padding" >

    <ImageView
        android:id="@+id/image_folders_icon"
        android:layout_width="@dimen/listview_image_size"
        android:layout_height="@dimen/listview_image_size"
        android:layout_gravity="center"
        android:maxHeight="@dimen/listview_image_size"
        android:maxWidth="@dimen/listview_image_size"
        android:scaleType="fitCenter" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/listview_padding"
        android:paddingStart="@dimen/listview_padding"
        android:paddingRight="@dimen/listview_padding"
        android:paddingEnd="@dimen/listview_padding" >

        <TextView
            android:id="@+id/text_folders_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_gravity="center_vertical"
            android:singleLine="true"
            android:ellipsize="end" >
        </TextView>

        <TextView
            android:id="@+id/text_folders_path"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp" >
        </TextView>

    </LinearLayout>

    <ImageView
        android:id="@+id/image_selected"
        android:layout_width="@dimen/listview_image_size"
        android:layout_height="@dimen/listview_image_size"
        android:layout_gravity="center"
        android:maxHeight="@dimen/listview_image_size"
        android:maxWidth="@dimen/listview_image_size"
        android:scaleType="fitCenter"
        android:src="@mipmap/ic_selected"
        android:visibility="invisible"/>
</LinearLayout>
