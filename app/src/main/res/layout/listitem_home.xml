<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listitem_home"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/listview_padding" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/listview_padding"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/image_transfer_icon"
            android:layout_width="@dimen/listview_image_size"
            android:layout_height="@dimen/listview_image_size"
            android:layout_gravity="center"
            android:maxHeight="@dimen/listview_image_size"
            android:maxWidth="@dimen/listview_image_size"
            android:scaleType="fitCenter" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/listview_padding"
            android:paddingStart="@dimen/listview_padding"
            android:paddingRight="@dimen/listview_padding"
            android:paddingEnd="@dimen/listview_padding" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/text_transfer_origin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/listview_padding"
                    android:layout_marginEnd="@dimen/listview_padding"
                    android:textSize="12sp"
                    android:singleLine="true"
                    android:ellipsize="end">
                </TextView>

                <TextView
                    android:id="@+id/text_transfer_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:textSize="12sp"
                    android:singleLine="true"
                    android:ellipsize="end">
                </TextView>

            </RelativeLayout>

            <TextView
                android:id="@+id/text_transfer_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp" >
            </TextView>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/button_transfer_ok"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_home_height"
            android:layout_marginRight="1dp"
            android:layout_marginEnd="1dp"
            android:layout_weight="1"
            android:background="@drawable/prompt_button"
            android:text="Accept"
            android:textSize="15sp"
            android:textColor="@drawable/prompt_button_textcolor" />

        <Button
            android:id="@+id/button_transfer_cancel"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_home_height"
            android:layout_weight="1"
            android:background="@drawable/prompt_button"
            android:text="Cancel"
            android:textSize="15sp"
            android:textColor="@drawable/prompt_button_textcolor" />
    </LinearLayout>

</LinearLayout>
